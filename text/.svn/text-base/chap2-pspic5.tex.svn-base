\documentclass{article}
\usepackage{pstricks,pst-tree,pst-node}

\pagestyle{empty}

\newcommand{\stnode}[1]{\TR{\psframebox{\texttt{#1}}}}
\newcommand{\stelabel}[1]{\texttt{#1}}

\begin{document}

\pstree[levelsep=18mm]{\stnode{?- jealous(X,Y)}}
{
 \pstree{\stnode{?- loves(\_G5,\_G6),loves(\_G7,\_G6)}
\tlput{\stelabel{\parbox{2cm}{X = \_G5,\\Y = \_G7}}}}
 {
  \pstree[levelsep=12mm]{\stnode{?- loves(\_G7,mia)}
\tlput{\stelabel{\parbox{30mm}{\_G5 = vincent,\\\_G6 = mia}}}}
  {
   \stnode{\strut\hspace{0.3cm}\strut}\tlput{\stelabel{\_G7 = vincent}}
   \stnode{\strut\hspace{0.3cm}\strut}\trput{\stelabel{\_G7 = marcellus}}
  }
  \pstree[levelsep=28mm]{\stnode{?- loves(\_G7,mia)}
\trput{\stelabel{\parbox{30mm}{\_G5 = marcellus,\\\_G6 = mia}}}}
  {
   \stnode{\strut\hspace{0.3cm}\strut}\tlput{\stelabel{\_G7 = vincent}}
   \stnode{\strut\hspace{0.3cm}\strut}\trput{\stelabel{\_G7 = marcellus}}
  }
 }
}

